<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/globalLoadingContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00FFFFFF"
    android:visibility="gone">

    <!-- ─────────────────────────────
         STATE: LOADING
    ────────────────────────────── -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stateLoadingContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/bg_yellow_gradient">

        <LinearLayout
            android:id="@+id/loadingCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/white_card"
            android:gravity="center"
            app:layout_constraintWidth_percent="0.85"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/loadingCircle"
                android:src="@drawable/loading_circle"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/shoeIcon"
                android:src="@drawable/shoe_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="-120dp"/>

            <TextView
                android:id="@+id/tvLoadingText"
                android:text="Loading..."
                android:textSize="18sp"
                android:textColor="#333333"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <ProgressBar
                android:id="@+id/progressBarLoading"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvAppName"
                android:text="ShoeSense"
                android:textSize="32sp"
                android:textStyle="bold"
                android:layout_marginTop="28dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnLoadingRetry"
                android:text="RETRY"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="36dp"
                android:background="#007BFF"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ─────────────────────────────
         STATE: NO NETWORK
    ────────────────────────────── -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stateNoNetworkContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/noNetworkCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/icNoWifi"
                android:src="@drawable/ic_no_wifi"
                android:layout_width="130dp"
                android:layout_height="130dp"/>

            <TextView
                android:id="@+id/tvNoNetworkTitle"
                android:text="No Internet Connection"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvNoNetworkMessage"
                android:text="Please check your network and try again."
                android:textSize="16sp"
                android:layout_marginTop="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnNoNetworkRetry"
                android:text="RETRY"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="#007BFF"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- ─────────────────────────────
         STATE: IOT NOT FOUND
    ────────────────────────────── -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/stateIotNotFoundContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="#FFFFFF">

        <LinearLayout
            android:id="@+id/iotNotFoundCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/icWarningYellow"
                android:src="@drawable/ic_warning_yellow"
                android:layout_width="120dp"
                android:layout_height="120dp"/>

            <TextView
                android:id="@+id/tvIotTitle"
                android:text="Device Not Detected"
                android:textSize="22sp"
                android:textStyle="bold"
                android:layout_marginTop="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvIotMessage"
                android:text="Your IoT sensor is offline or unreachable."
                android:textSize="16sp"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/tvIotTips"
                android:text="Make sure: \n• Power is on \n• Bluetooth/WiFi is active \n• IoT is near your phone"
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btnIotRetry"
                android:text="RETRY"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:background="#007BFF"
                android:textColor="#FFFFFF"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
