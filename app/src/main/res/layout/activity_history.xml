<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFF7D1"
    tools:context=".history.HistoryActivity">

    <!-- Header Card with gradient-like effect -->
    <LinearLayout
        android:id="@+id/headerCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:elevation="4dp"
        android:padding="20dp">

        <!-- Title with icon -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tvHistoryTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#2C2C2C"
                android:letterSpacing="0.02" />
        </LinearLayout>
    </LinearLayout>

    <!-- Filter Section Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/filterCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/headerCard"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:elevation="3dp"
        android:backgroundTint="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"

                android:contentDescription="Filter"
                android:layout_marginEnd="12dp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Filter by Slot:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#2C2C2C" />

            <Spinner
                android:id="@+id/spnSlotFilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                android:spinnerMode="dropdown"
                 />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Empty State (initially hidden) -->
    <LinearLayout
        android:id="@+id/emptyState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"

            android:alpha="0.6"
            android:contentDescription="No history" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No History Yet"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#666666"
            android:layout_marginTop="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your booking history will appear here"
            android:textSize="14sp"
            android:textColor="#999999"
            android:layout_marginTop="8dp" />
    </LinearLayout>

    <!-- RecyclerView with card styling -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerHistory"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/filterCard"
        android:layout_above="@id/bottomNavigation"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:overScrollMode="never" />

    <!-- Bottom Navigation (unchanged) -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_nav_bar"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Home" />
        </LinearLayout>

        <!-- History -->
        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/history_icon"
                android:contentDescription="History" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notif_icon"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/settings_icon"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <!-- Cute icon (optional) -->
                <ImageView
                    android:id="@+id/loading_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/shoe_icon"
                    app:tint="#FFD428"
                    android:contentDescription="Loading" />

                <!-- Main message (used by LoadingScreenHelper) -->
                <TextView
                    android:id="@+id/loading_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Loading your shelfâ€¦"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <!-- Small subtitle for vibe -->
                <TextView
                    android:id="@+id/loading_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Please wait a moment ðŸ‘Ÿ"
                    android:textSize="13sp"
                    android:textColor="#888888" />

                <!-- Progress -->
                <ProgressBar
                    android:id="@+id/loading_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="?android:attr/progressBarStyleLarge" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>
</RelativeLayout>
