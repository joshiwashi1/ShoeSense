<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF7D1"
    tools:context=".notification.NotificationActivity">

    <!-- Top Title -->
    <TextView
        android:id="@+id/notificationTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="Notifications"
        android:textColor="@color/black"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Filter Row -->
    <LinearLayout
        android:id="@+id/filterContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/notificationTitle"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Small filter group on the left -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnAll"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:text="All"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/white"
                android:backgroundTint="#2196F3"
                android:minWidth="64dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

            <Button
                android:id="@+id/btnUnread"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginStart="8dp"
                android:text="Unread"
                android:textAllCaps="false"
                android:textSize="14sp"
                android:textColor="@android:color/black"
                android:backgroundTint="#FFEB3B"
                android:minWidth="80dp"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />
        </LinearLayout>

        <!-- Action text on the right -->
        <TextView
            android:id="@+id/markAllRead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark all as read"
            android:textColor="#2196F3"
            android:textSize="13sp"
            android:textStyle="bold"
            android:paddingStart="12dp"
            android:paddingEnd="4dp"
            android:gravity="center_vertical" />
    </LinearLayout>

    <!-- Scrollable List of Notifications -->
    <!-- Scrollable List of Notifications -->
    <ScrollView
        android:id="@+id/scrollNotifications"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/filterContainer"
        android:layout_above="@+id/bottomNavigation"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:id="@+id/notificationList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp" />

    </ScrollView>

    <!-- ðŸŒŸ Custom Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="16dp"
        android:background="@drawable/bg_nav_bar"
        android:orientation="horizontal"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:elevation="8dp"
        android:layout_alignParentBottom="true">

        <!-- Home -->
        <LinearLayout
            android:id="@+id/navHome"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/home_icon"
                android:contentDescription="Home" />
        </LinearLayout>

        <!-- History -->
        <LinearLayout
            android:id="@+id/navHistory"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/history_icon"
                android:contentDescription="History" />
        </LinearLayout>

        <!-- Notifications -->
        <LinearLayout
            android:id="@+id/navNotifications"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/notif_icon"
                android:contentDescription="Notifications" />
        </LinearLayout>

        <!-- Settings -->
        <LinearLayout
            android:id="@+id/navSettings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/settings_icon"
                android:contentDescription="Settings" />
        </LinearLayout>
    </LinearLayout>

    <!-- Loading Overlay (unchanged) -->
    <FrameLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66000000"
        android:clickable="true"
        android:focusable="true"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="16dp"
            app:cardCornerRadius="24dp"
            app:cardUseCompatPadding="true"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@android:color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/loading_icon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/shoe_icon"
                    app:tint="#FFD428"
                    android:contentDescription="Loading" />

                <TextView
                    android:id="@+id/loading_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="Loading your shelfâ€¦"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#333333" />

                <TextView
                    android:id="@+id/loading_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Please wait a moment ðŸ‘Ÿ"
                    android:textSize="13sp"
                    android:textColor="#888888" />

                <ProgressBar
                    android:id="@+id/loading_progress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    style="?android:attr/progressBarStyleLarge" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </FrameLayout>

</RelativeLayout>
